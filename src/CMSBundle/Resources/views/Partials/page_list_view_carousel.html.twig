<div >
    {% if pages is empty%}
        No results found
    {% else %}
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 400px;height: 400px; margin: 0 auto">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for page in pages %}
                    {% if loop.index0 == 0 %}
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    {% else %}
                        <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}"></li>
                    {% endif %}
                {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                {% for page in pages %}
                    {% if loop.index0 == 0 %}
                        <div class="item active" style="width: 400px;height: 400px;overflow: hidden">
                            {% if page.image %}
                                <a href="{{ path('view_page',{'slug':page.slug}) }}">
                                    <img src="/../Uploads/{{ page.image }}" style="height: 100%;">
                                </a>
                            {% else %}
                                <a href="{{ path('view_page',{'slug':page.slug}) }}">
                                    <img src="/../{{ asset('Uploads/logo.png') }}" style="height: 100%;">
                                </a>
                            {% endif %}
                            <div class="carousel-caption">
                                <h3>{{ page.title }}</h3>
                            </div>
                        </div>
                    {% else %}
                    <div class="item" style="width: 400px;height: 400px;overflow: hidden">
                        {% if page.image %}
                            <a href="{{ path('view_page',{'slug':page.slug}) }}">
                                <img src="/../Uploads/{{ page.image }}" style="height: 100%;">
                            </a>
                        {% else %}
                            <a href="{{ path('view_page',{'slug':page.slug}) }}">
                                <img src="/../{{ asset('Uploads/logo.png') }}" style="height: 100%;">
                            </a>
                        {% endif %}
                        <div class="carousel-caption">
                            <h3>{{ page.title }}</h3>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}
</div>