
<div>
    <h3>Comments:</h3>
    <hr>
    {%   for comment in comments %}
    <div >
        <div style="display: inline-block; vertical-align:top;text-align: right;">
            <span><b>{{ comment.user.username }}: </b></span> <br>
            {% if comment.user.avatar %}
                <img style="height: 80px;" src="{{ asset('Uploads/'~comment.user.avatar) }}">
            {% else %}
                <img style="height: 80px;" src="{{ asset('DefaultImg/user.png') }}">
            {% endif %}
            <br>

        </div>
        <div class="well" style="display: inline-block; border: solid black; border-width: 1px; border-radius: 0px 10px 10px 10px">
            {{ comment.content|raw }}<br>
            <span style="font-size:10px"> {{ comment.datetime|date('Y-m-d H:i:s') }} </span>
        </div>
    </div>
        <hr>
    {% endfor %}
    {% if app.user %}
        {{ form_start(form) }}
            {{ form_row(form.content) }}
            <input type="submit" class="btn btn-default" value="add">
        {{ form_end(form) }}
    {% else %}
        <a class="btn btn-default" href="{{ url('login') }}">Log in</a>
        <br>
        <hr>
    {% endif %}
</div>