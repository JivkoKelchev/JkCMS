{% extends 'base.html.twig' %}
{% block bs_theme %}{{gs.bsTheme }}{% endblock %}

{% block header %}
    {{ render(controller('CMSBundle:RenderPartials:header')) }}
{% endblock %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}

    <div  style="margin-left:80px;margin-right:80px; padding : 20px; min-width : 300px;" class="jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.brand) }}
        {{ form_row(form.logoFile) }}
        {%   if navbar.logo != '' %}
            <img class="col-sm-offset-2" style="height:80px;margin-bottom: 10px" src="/../Uploads/{{ navbar.logo }}"><a  href="{{ path('navbar_delete_logo') }}">Remove logo</a>

        {% endif %}
        {{ form_row(form.categories) }}
        {{ form_row(form.sl) }}
        {% if sl != null %}
                {% for key,link in sl %}
                    <a href="{{ path('navbar_delete_link',{'link':key}) }}" class="btn btn-danger col-sm-offset-2 btn-xs"><span class="glyphicon glyphicon-remove"></span> {{ link['name'] }} </a><br>
                {% endfor %}
        {% endif %}
        {{ form_row(form.searchByTags) }}
        {{ form_row(form.logInOut) }}
        <input type="submit" class="btn btn-success col-sm-offset-2"  value="ok">
        {{ form_end(form) }}
    </div>
{% endblock %}