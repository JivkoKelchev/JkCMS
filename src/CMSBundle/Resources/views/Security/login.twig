{% extends 'base.html.twig' %}
{% block bs_theme %}{{gs.bsTheme }}{% endblock %}

{% block header %}
    {{ render(controller('CMSBundle:RenderPartials:header')) }}
{% endblock %}

{% block body %}

    <form class="form-horizontal jumbotron" action="{{ path('login') }}" method="post" style="margin-left:80px;margin-right:80px; padding : 20px; min-width : 300px;">
        {% if error %}
            <div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <fieldset>
            <legend>
                Log in
            </legend>
            <div class="form-group" >
                <label class="col-lg-2 control-label" for="username">Username:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <br>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="password">Password:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="password" id="password" name="_password" />
                </div>
                <br>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-primary" type="submit">login</button>
                <a href="{{ path('register') }}" class="btn btn-primary ">sign up</a>
            </div>
        </fieldset>
    </form>
{% endblock %}